@{
}



@model CoffeeShopLab2.Models.CoffeeShop.ShopViewModel
<link rel="stylesheet" href="~/css/stylesheet.css" type="text/css" />

<h1>ID NUMBER: @Model.CurrentUserID</h1>
<h1>AVAILABLE FUNDS: $@Model.UserFunds</h1>
<br />




@{
    foreach (var item in Model.Items)
    {
        <div id="shopItems">
            <p>Name: @item.Name</p>
            <p>Description: @item.Description</p>
            <p>Price: @item.Price</p>
            <p>Quantity: @item.Quantity</p>


            @if (item.Purchased != true)
            {
                <a asp-controller="CoffeeShop" asp-action="BuyResult" asp-route-id="@item.ItemID" asp-route-userid="@Model.CurrentUserID">BUY ITEM</a>
            }
            else
            {
                <h5>Purchased by current user: @Model.CurrentUserID </h5>
                <a asp-controller="CoffeeShop" asp-action="BuyResult" asp-route-id="@item.ItemID" asp-route-userid="@Model.CurrentUserID">BUY ITEM AGAIN?</a>
            }
        </div>
        <br />
    }
}